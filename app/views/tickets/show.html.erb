<section class="content-header">
  <h1>
    Tickets
  </h1>
  <ol class="breadcrumb">
    <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
    <li><a href="/tickets">Orders</a></li>
    <li class="active">Ticket Details</li>
  </ol>
</section>

<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-md-12">
      <!-- general form elements -->
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Ticket Details</h3>
        </div><!-- /.box-header -->
        <!-- form start -->
        <div class="box-body">
          <p>
            <strong>ID:</strong>
            <%= @ticket.id %>
          </p>

          <p>
            <strong>Issue:</strong>
            <%= @ticket.issue %>
          </p>
          <p>
            <strong>Description:</strong>
            <%= @ticket.description %>
          </p>
          <p>
            <strong>Priority:</strong>
            <%= @ticket.priority %>
          </p>

          <p>
            <strong>User:</strong>
            <%= User.find(@ticket.user_id).name %>
          </p>

        </div>
        <div class="box-footer">
          <%= link_to 'Edit', edit_ticket_path(@ticket) ,:class =>"btn bg-green margin"%>
          <%= link_to 'Back', tickets_path ,:class =>"btn bg-green margin"%>
        </div>
      </div><!-- /.box -->
    </div>
  </div>   <!-- /.row -->
</section><!-- /.content -->
